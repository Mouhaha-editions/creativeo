{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}
{% block contentHeader %}
    {% include 'tools/content_header.html.twig' with {title: "title.recipe.index"|trans } %}

{% endblock %}

{% block content %}

<div class="row">
    <div class="col-12">
        <a class='btn btn-sm btn-success mb-2 float-right' href="{{ path('recipe_new') }}"><i class="fas fa-plus "></i> {{ "button.default.add"|trans }}</a>

        <table class="table">
            <thead>
            <tr>
                <th>{{ "entity.recipe.label.label"|trans }}</th>
                <th>{{ "entity.recipe.label.estimatedHours"|trans }}</th>
                <th>{{ "entity.recipe.label.recipeComponents"|trans }}</th>
                <th>{{ "entity.recipe.label.costNow"|trans }}</th>
                <th>{{ "entity.recipe.label.canDoIt"|trans }}</th>

                <th>{{ "text.action"|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td>{{ recipe.Label }}</td>
                    <td>{{ recipe.estimatedHours }}</td>
                    <td>{{ recipe.recipeComponents|length }}</td>
                    <td>{{ recipe_service.estimatedCost(recipe) }}</td>
                    <td>{{ recipe_service.canDoIt(recipe) ? '<i class="fas fa-check text-success"></i>' : '<i class="far fa-close text-danger"></i>' }}</td>
                    <td>
                        <a href="{{ path('recipe_show', {'id': recipe.id}) }}" class="btn btn-default btn-sm"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('recipe_edit', {'id': recipe.id}) }}" class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>
                        {{ include('recipe/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">{{ "text.no_recipe"|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
