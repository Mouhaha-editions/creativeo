{% extends 'base.html.twig' %}

{% block title %}Component index{% endblock %}

{% block body %}
    <h1>Component index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>CommunityEnabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for component in components %}
            <tr>
                <td>{{ component.id }}</td>
                <td>{{ component.label }}</td>
                <td>{{ component.communityEnabled ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('component_show', {'id': component.id}) }}">show</a>
                    <a href="{{ path('component_edit', {'id': component.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('component_new') }}">Create new</a>
{% endblock %}
