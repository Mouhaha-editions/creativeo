{% extends 'base.html.twig' %}
{% block title %}{{ 'title.user.preference'|trans }} {{ parent() }}{% endblock %}
{% block contentHeader %}
    {% include('tools/content_header.html.twig') with {title:'title.user.preference'|trans} %}
{% endblock %}
{% block content %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ "title.user.preference"|trans }}</h3>
                </div>
                <div class="card-body p-3">
                    {{ form_row(form.hourCost) }}
                    {{ form_row(form.moneyUnit) }}
                    {{ form_row(form.useOrderPreference) }}
                    <button class="btn btn-success btn-sm">{{ "button.default.save"|trans }}</button>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}