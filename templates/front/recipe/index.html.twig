{% extends 'base.html.twig' %}

{% block title %}{{ "title.recipe.index"|trans }} {{ parent() }}{% endblock %}
{% block contentHeader %}
    {% include 'tools/content_header.html.twig' with {title: "title.recipe.index"|trans } %}

{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ "title.recipe.index"|trans }}</h3>
                    <a class='btn btn-sm btn-success float-right' href="{{ path('recipe_new') }}"><i
                                class="fas fa-plus "></i> {{ "button.default.add"|trans }}</a>
                </div>
                <div class="card-body p-0">


                    <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>{{ "entity.recipe.label.label"|trans }}</th>
                            <th class="text-right">{{ "entity.recipe.label.estimatedHours"|trans }}</th>
                            <th class="text-right">{{ "entity.recipe.label.recipeComponents"|trans }}</th>
                            <th class="text-right">
                                {{ "entity.recipe.label.costNow"|trans }}
                                <i class="help fas fa-question-circle text-info pointer" data-placement='top'
                                   data-content="{{ "text.help.costNow"|trans }}"></i>
                            </th>
                            <th class="text-right">
                                {{ "entity.recipe.label.optimizedSellPrice"|trans }}
                                <i class="help fas fa-question-circle text-info pointer" data-placement='top'
                                   data-content="{{ "text.help.sellpriceOptimized"|trans }}"></i>
                            </th>
                            <th class="text-right">
                                {{ "entity.recipe.label.revenus"|trans }}
                                <i class="help fas fa-question-circle text-info pointer" data-placement='top'
                                   data-content="{{ "text.help.revenus"|trans }}"></i>
                            </th>
                            <th>
                                {{ "entity.recipe.label.canDoIt"|trans }}
                                <i class="help fas fa-question-circle text-info pointer" data-placement='top'
                                   data-content="{{ "text.help.canDoIt"|trans }}"></i>
                            </th>

                            <th>{{ "text.action"|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for recipe in recipes %}
                            <tr>
                                <td>{{ recipe.Label }}</td>
                                <td class="text-right">
                                    {{ recipe.estimatedHours|number_format(2,',',' ') }}h
                                </td>
                                <td class="text-right">
                                    {{ recipe.recipeComponents|length|number_format(0,',',' ') }}
                                </td>
                                <td class="text-right">
                                    {{ recipe_service.estimatedCost(recipe)|number_format(2,',',' ') }} {{ app.user.moneyUnit }}
                                </td>
                                <td class="text-right">
                                    {{ recipe_service.sellPriceOptimized(recipe)|number_format(2,',',' ') }} {{ app.user.moneyUnit }}
                                </td>
                                <td class="text-right">
                                    {{ recipe_service.revenus(recipe)|number_format(2,',',' ') }} {{ app.user.moneyUnit }}
                                </td>
                                <td class="text-center">
                                    {% set canDoIt = recipe_service.canDoIt(recipe) %}
                                    {{ canDoIt  ? '<i class="fas fa-check text-success"></i>' : '<i class="fas fa-times text-danger"></i>' }}
                                </td>
                                <td>
                                    {#                                    <a href="{{ path('recipe_show', {'id': recipe.id}) }}"#}
                                    {#                                       class="btn btn-default btn-xs"><i class="fas fa-eye"></i></a>#}
                                    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}"
                                       class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>
                                    {{ include('front/recipe/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">{{ "text.no_recipe"|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
