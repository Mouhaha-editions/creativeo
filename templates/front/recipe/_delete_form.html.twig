<form class='delete-button-form' method="post" action="{{ path('recipe_delete', {'id': recipe.id}) }}" onsubmit="return confirm({{ "text.confirm_delete"|trans}});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
    <button class="btn btn-danger btn-block btn-square "><i class="fas fa-trash"></i></button>
</form>
