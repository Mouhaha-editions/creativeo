{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}
{% block contentHeader %}Recipe{% endblock %}

{% block content %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ recipe.Label }}</td>
            </tr>
            <tr>
                <th>EstimatedHours</th>
                <td>{{ recipe.estimatedHours }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
